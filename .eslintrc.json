{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "import"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier", "plugin:import/errors", "plugin:import/warnings"],

  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/consistent-type-definitions": ["error", "type"],
    "import/no-unresolved": "error",
    "import/named": "error",
    "import/default": "error",
    "import/export": "error"
  },

  "env": {
    "browser": true,
    "es2021": true
  }
}
